<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:orientation="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lab2.musicapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/butn1"
        android:textSize="45dp"
        android:layout_marginLeft="80dp"
        android:layout_height="wrap_content"
        android:text="Music App"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        android:id="@+id/play"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/butn1"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/pause"
        android:text="pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/play"
        android:layout_alignStart="@+id/play" />
    <Button
        android:text="stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/pause" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:layout_below="@+id/stop"
        android:layout_alignStart="@+id/stop"
        android:layout_marginTop="54dp"
        android:id="@+id/artist" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:id="@+id/info"
        android:layout_alignTop="@+id/artist"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album"
        android:id="@+id/album"
        android:layout_alignTop="@+id/artist"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
